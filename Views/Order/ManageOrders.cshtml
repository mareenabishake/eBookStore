@model IEnumerable<eBookStore.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
    Layout = "_AdminLayout";
}

<h1>Manage Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Email</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Payment Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Customer.Email</td>
                <td>@item.OrderDate.ToShortDateString()</td>
                <td>@item.TotalAmount.ToString("C")</td>
                <td>@item.Status</td>
                <td>@item.PaymentStatus</td>
                <td>
                    <a asp-action="OrderDetails" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="EditOrder" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="DeleteOrder" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

